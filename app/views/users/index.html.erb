<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
    <div class="col-md-3 col-sm-4 col-xs-6 showUser showUser--index">
      <div class="showUser__avatar">
        <%= link_to user do %>
          <%= profile_img(user)%>
        <% end %>
      </div>
      <div class="showUser__email">
        <%= user.email %>
      </div>
      <div class="showUser__email">
        <%= user.name %>
      </div>
      <div class="showUser__followButton">
        <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
      </div>
      <% if user.id != current_user.id %>
        <div class="showUser__message">
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
